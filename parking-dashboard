            document.getElementById('supply-list').innerHTML = '';
            document.getElementById('tasks-list').innerHTML = '';

            // סידור הנתונים לפי עדיפות
            const sortedData = currentData.sort((a, b) => {
                if (a.priority === 0) return 1;
                if (b.priority === 0) return -1;
                return a.priority - b.priority;
            });

            // הוספת הפריטים לעמודות
            sortedData.forEach(data => {
                const item = createItem(data);
                const listId = data.column + '-list';
                const list = document.getElementById(listId);
                if (list) {
                    list.appendChild(item);
                }
            });
            
            console.log('נתונים נטענו בהצלחה');
        }

        // פונקציה להצגת אינדיקטור עדכון
        function showRefreshIndicator() {
            const indicator = document.getElementById('refreshIndicator');
            indicator.classList.add('show');
            setTimeout(() => {
                indicator.classList.remove('show');
            }, 2000);
        }

        // פונקציה לעדכון
        async function refreshData() {
            showRefreshIndicator();
            await loadData();
        }

        // אתחול הדף
        async function initialize() {
            console.log('מאתחל את המסך...');
            updateDateTime();
            await loadData();
            
            // כפתור רענון
            document.getElementById('refreshBtn').addEventListener('click', refreshData);
            
            // עדכון השעה כל שנייה
            setInterval(updateDateTime, 1000);
            
            // עדכון נתונים כל 3 דקות
            setInterval(refreshData, 3 * 60 * 1000);
            
            console.log('המסך מוכן!');
        }

        // הפעלה בטעינת הדף
        document.addEventListener('DOMContentLoaded', initialize);

        // רענון ידני
        document.addEventListener('keydown', function(e) {
            if (e.key === 'F5' || (e.ctrlKey && e.key === 'r')) {
                e.preventDefault();
                refreshData();
            }
        });
    </script>
