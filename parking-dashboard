    <script>
        // נתונים
        let currentData = [];

        // פונקציה לעדכון השעה והתאריך
        function updateDateTime() {
            const now = new Date();
            const options = {
                timeZone: 'Asia/Jerusalem',
                year: 'numeric',
                month: '2-digit',
                day: '2-digit',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit'
            };
            
            const israelTime = now.toLocaleString('he-IL', options);
            document.getElementById('datetime').textContent = israelTime;
        }

        // פונקציה ליצירת פריט ברשימה
        function createItem(data) {
            const item = document.createElement('div');
            item.className = `item priority-${data.priority}`;
            
            item.innerHTML = `
                <div class="priority-badge"></div>
                <div class="item-title">${data.title}</div>
                <div class="item-description">${data.description}</div>
                <div class="tooltip">ציוד נדרש: ${data.equipment}</div>
            `;
            
            return item;
        }

        // פונקציה לקריאה מ-Google Sheets באמצעות JSONP
        function fetchFromGoogleSheets() {
            return new Promise((resolve, reject) => {
                const callbackName = `googleCallback_${Date.now()}`;
                
                // יצירת פונקציית callback גלובלית
                window[callbackName] = function(response) {
                    try {
                        console.log('Response מ-Google:', response);
                        const data = [];
                        
                        if (response.table && response.table.rows) {
                            const rows = response.table.rows;
                            console.log('מספר שורות:', rows.length);
                            
                            // מדלג על שורת הכותרות
                            for (let i = 1; i < rows.length; i++) {
                                const row = rows[i];
                                const cells = row.c || [];
                                
                                // עמודה A (0) - משימות שונות
                                if (cells[0] && cells[0].v) {
                                    const title = String(cells[0].v).trim();
                                    if (title) {
                                        data.push({
                                            column: 'tasks',
                                            title: title,
                                            description: 'משימות שונות',
                                            priority: (cells[1] && cells[1].v) ? parseInt(cells[1].v) : 3,
                                            equipment: (cells[2] && cells[2].v) ? String(cells[2].v).trim() : 'לא צוין'
                                        });
                                    }
                                }
                                
                                // עמודה D (3) - פרויקטים
                                if (cells[3] && cells[3].v) {
                                    const title = String(cells[3].v).trim();
                                    if (title) {
                                        data.push({
                                            column: 'projects',
                                            title: title,
                                            description: 'פרויקטים',
                                            priority: (cells[4] && cells[4].v) ? parseInt(cells[4].v) : 3,
                                            equipment: (cells[5] && cells[5].v) ? String(cells[5].v).trim() : 'לא צוין'
                                        });
                                    }
                                }
                                
                                // עמודה G (6) - אספקת ציוד
                                if (cells[6] && cells[6].v) {
                                    const title = String(cells[6].v).trim();
                                    if (title) {
                                        data.push({
                                            column: 'supply',
                                            title: title,
                                            description: 'אספקת ציוד',
                                            priority: (cells[7] && cells[7].v) ? parseInt(cells[7].v) : 3,
                                            equipment: (cells[8] && cells[8].v) ? String(cells[8].v).trim() : 'לא צוין'
                                        });
                                    }
                                }
                            }
                        }
                        
                        console.log('נטענו מGoogle Sheets:', data.length, 'פריטים');
                        
                        // ניקוי
                        if (script && script.parentNode) {
                            script.parentNode.removeChild(script);
                        }
                        delete window[callbackName];
                        
                        resolve(data);
                        
                    } catch (error) {
                        console.error('שגיאה בעיבוד נתונים מGoogle:', error);
                        if (script && script.parentNode) {
                            script.parentNode.removeChild(script);
                        }
                        delete window[callbackName];
                        resolve([]); // החזר מערך ריק במקום שגיאה
                    }
                };
                
                // יצירת תג script לJSONP
                const script = document.createElement('script');
                const sheetId = '1vRl8w2iwqWSJaTmGC90rtUk6wxZva2znvgYAd5viogIRiOR0d0DnLg-EukU44bUnFY9s3QOYs691oYA';
                const url = `https://docs.google.com/spreadsheets/d/${sheetId}/gviz/tq?tqx=out:json;responseHandler:${callbackName}&gid=0`;
                
                script.src = url;
                script.onerror = () => {
                    console.error('שגיאה בטעינת הסקריפט');
                    if (script && script.parentNode) {
                        script.parentNode.removeChild(script);
                    }
                    delete window[callbackName];
                    resolve([]); // החזר מערך ריק במקום שגיאה
                };
                
                // timeout אחרי 10 שניות
                setTimeout(() => {
                    if (script && script.parentNode) {
                        console.log('Timeout - מבטל קריאה');
                        script.parentNode.removeChild(script);
                        delete window[callbackName];
                        resolve([]); // החזר מערך ריק במקום שגיאה
                    }
                }, 10000);
                
                document.head.appendChild(script);
            });
        }

        // פונקציה לטעינת נתונים
        async function loadData() {
            console.log('טוען נתונים...');
            
            // נסה לקרוא מGoogle Sheets
